<%- include('header.ejs') %>
<!DOCTYPE html>
<html>
    <head>
        <title>Cart</title>
        <script src="assets/js/verify.js"></script>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
        integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
        <link href="assets/css/style.css" rel="stylesheet">
    </head>
<body>
    <div class="container" style="max-width: 100%;padding: 30px;background: #dee2e673;">
        <div class="row">
            <div class="col-9">
                <div class="card" style="border: none;">
                    <div class="row" style="padding-left:25px;padding-top:15px;width:100%;border-bottom: 1px solid #dddddd;margin-left: 0px;">
                        <h2>Shopping Cart</h2>
                    </div>
            <% var quantity =0, totalprice=0;%>
            <% if(products.length>0){%>
                <% products.forEach(function(product){ %>
                    <% quantity+= product.quantity%>
                    <% var price = product.price.split(',') %>
                    <% pricee= parseInt(price.join('')) %>
                    <% totalprice+= pricee*parseInt(product.quantity) %>
                    <div class="row" style="border-bottom: 1px solid #dddddd;margin-left: 0px;">
                    <div class="col-3">
                        <center>
                            <img src="assets/productImg/<%= product.src %>" style="width:100%;max-width: 100px; padding: 35px; padding-left: 0px; padding-right: 0px;">
                        </center>
                    </div>
                    <div class="col-7">
                        <h5 class="card-title" style="padding-top: 40px;color: #007185;"> <%= product.title %></h5>
                        <p style="font-size: 12px;line-height: 0;color: #02911a;">In Stock</p>
                        <p style="font-size: 12px;line-height: 0;">Eligible for FREE Shipping</p>
                        <h6>Price: <%= product.price %></h6>
                        <button style="height:31px;padding: 0rem .75rem;font-size: 0.9rem;border-color: #D5D9D9;border-radius: 8px;color: #0F1111;background: #F0F2F2;" class="btn btn-primary" id="decrement<%= product.id %>" onclick="window.decrease('<%= product.id %>')">Qty -1</button>
                        <label id="<%= product.id %>"><%= product.quantity %></label>
                        <button style="height:31px;padding: 0rem .75rem;font-size: 0.9rem;border-color: #D5D9D9;border-radius: 8px;color: #0F1111;background: #F0F2F2;"class="btn btn-primary" id="increment<%= product.id %>" onclick="window.increase('<%= product.id %>')">Qty +1</button>
                        <label id="msg" style="color: red;"></label><br>
                        <button style="margin-top:10px;height:31px;padding: 0rem .75rem;font-size: 0.9rem;" class="btn btn-danger" onclick="window.deleteFromCart('<%= product.id %>')">Remove product from Cart</button>
                    </div>
                    <div class="col-2">
                        <h5 class="card-title" style="padding-top: 40px;color: #007185;"> ₹<%=product.price %></h5>
                    </div>
                    </div>
                <% }) %>
            <% }else{%>
                <div><h1>your cart is empty</h1></div>
            <% } %>
                </div>
            </div>
            <div class="col-3">
                <div class="card">
                        <img width="100%" src="https://images-eu.ssl-images-amazon.com/images/G/31/checkout/assets/TM_desktop._CB443006202_.png">
                   
                </div>
                <div class="card">
                    <div class="card-body">
                        <p style="padding-top:10px;font-size: 13px;line-height: 0;color: #02911a;">Your order is eligible for free delivery</p>
                        <p style="font-size: 13px;line-height: 0;">Select this option at checkout</p>
                        <h5 class="card-title" style="color: #007185;">Subtotal(<%= quantity %> items): ₹<%=totalprice%></h5>
                        <a style="color:black;width:100%;margin-top:10px;height:31px;padding: 0rem .75rem;font-size: 0.9rem;background: #FFD814;border-color: #FCD200;" class="btn btn-danger" href="/checkout">Continue to proceed </a>
                        <br><label style="color:red;" id="result"></label>
                    </div>
                </div>
            </div>
        </div>
        <p style="font-size: 13px;line-height: 1.1;padding:20px;">The price and availability of items at Amazon.in are subject to change. The shopping cart is a temporary place to store a list of your items and reflects each item's most recent price. Do you have a promotional code? We'll ask you to enter your claim code when it's time to pay.</p>
    </div>
